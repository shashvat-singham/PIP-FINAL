# Stock Research Chatbot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Required Configuration
# ============================================================================

# Google Gemini API Key (REQUIRED)
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, staging, production)
APP_ENV=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum iterations per agent (ReAct loop)
MAX_ITERATIONS=3

# Request timeout in seconds
REQUEST_TIMEOUT=60
TIMEOUT_SECONDS=60

# ============================================================================
# API Configuration
# ============================================================================

# API server host and port
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8501

# ============================================================================
# Vector Database Configuration
# ============================================================================

# ChromaDB persistence directory
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# ============================================================================
# Rate Limiting
# ============================================================================

# Maximum requests per minute per IP
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Security
# ============================================================================

# Secret key for session management (generate a random string)
SECRET_KEY=your_secret_key_here_change_in_production

# ============================================================================
# Data Sources Configuration (Optional)
# ============================================================================

# Yahoo Finance API (no key required, but can set custom settings)
YAHOO_FINANCE_TIMEOUT=10

# SEC EDGAR (no key required)
SEC_EDGAR_USER_AGENT=StockResearchBot/1.0

# ============================================================================
# Feature Flags (Optional)
# ============================================================================

# Enable/disable specific agents
ENABLE_NEWS_AGENT=true
ENABLE_PRICE_AGENT=true
ENABLE_EARNINGS_AGENT=true
ENABLE_INSIDER_AGENT=true
ENABLE_PATENTS_AGENT=true
ENABLE_FILINGS_AGENT=true

# Enable conversation manager for interactive confirmations
ENABLE_CONVERSATION_MANAGER=true

# Enable ticker mapper for company name recognition
ENABLE_TICKER_MAPPER=true

